{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src/electron",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext", "dom"]
  },
  "exclude": [
    "node_modules",
    "dist/public",
    "out/**",
    "src/frontend/**"
  ],
  "include": ["src/electron/**/*", "gloabl.d.ts"]
}
